  <!-- AI Bot Chat Modal -->
  <div id="ai-bot-modal">
    <div class="header">
      Ask AI Bot
      <span class="close-btn" onclick="closeAIBot()">&times;</span>
    </div>
    <div id="ai-bot-chat">
      <div><b>ðŸ¤–:</b> Hi! Ask me anything about TechMph Solutions or careers. ðŸ‘‹</div>
    </div>
    <form onsubmit="return sendAIBotMessage();">
      <input type="text" id="ai-bot-input" placeholder="Type your question..." autocomplete="off" />
      <button type="submit">Send</button>
    </form>
  </div>

  <script>
    function openAIBot() {
      document.getElementById('ai-bot-modal').style.display = 'block';
      document.getElementById('ai-bot-input').focus();
    }
    function closeAIBot() {
      document.getElementById('ai-bot-modal').style.display = 'none';
    }
    function sendAIBotMessage() {
      var chat = document.getElementById('ai-bot-chat');
      var input = document.getElementById('ai-bot-input');
      var userMsg = input.value.trim();
      if(userMsg) {
        chat.innerHTML += `<div><b>You:</b> ${userMsg}</div>`;
        setTimeout(function(){
          chat.innerHTML += `<div><b>ðŸ¤–:</b> Thank you for your question! Our team will get back to you soon.</div>`;
          chat.scrollTop = chat.scrollHeight;
        }, 600);
        input.value = "";
        chat.scrollTop = chat.scrollHeight;
      }
      return false;
    }
  </script>
