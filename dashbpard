<script>
let isLogin=true; // toggle form

function toggleForm(){
  const link=document.querySelector('.toggle-link');
  if(isLogin){
    document.getElementById('authForm').querySelector('button').innerText="Register";
    link.innerText="Switch to Login";
    isLogin=false;
  }else{
    document.getElementById('authForm').querySelector('button').innerText="Login";
    link.innerText="Switch to Register";
    isLogin=true;
  }
}

function handleAuth(){
  const email=document.getElementById('email').value;
  const password=document.getElementById('password').value;
  if(!email||!password){alert('Enter email & password'); return;}

  const users=JSON.parse(localStorage.getItem('users')||'{}');

  if(isLogin){
    // Login
    if(users[email] && users[email]===password){
      showDashboard(email);
    }else{
      alert('User not found or wrong password');
    }
  }else{
    // Register
    if(users[email]){
      alert('User already exists');
    }else{
      users[email]=password;
      localStorage.setItem('users',JSON.stringify(users));
      alert('Registered successfully!');
      showDashboard(email);
    }
  }
}

function showDashboard(email){
  document.getElementById('authForm').style.display='none';
  const dash=document.getElementById('dashboard');
  dash.style.display='flex';
  document.getElementById('userEmail').innerText=email;
}

function logout(){
  document.getElementById('dashboard').style.display='none';
  document.getElementById('authForm').style.display='block';
  document.getElementById('email').value='';
  document.getElementById('password').value='';
  isLogin=true;
  document.querySelector('.toggle-link').innerText='Switch to Register/Login';
  document.getElementById('authForm').querySelector('button').innerText='Login';
}
</script>

